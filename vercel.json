{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "distDir": "dist/server",
        "maxDuration": 10
      }
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static",
      "config": {
        "distDir": "dist/client"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}
